{
    "lang": "fr",
    "baseUri": "http://vtt.revermont.bike/",
    "destination": "web",
    "assets": "assets",
    "source": "src",
    "concat": {
        "css": [
            "assets/font.css",
            "assets/css/pure/pure.css",
            "assets/css/pure/grids-responsive.css",
            "assets/lib/leaflet/leaflet.css",
            "assets/lib/leaflet.fullscreen/leaflet.fullscreen.css",
            "assets/lib/leaflet.awesome-markers/leaflet.awesome-markers.css",
            "assets/css/structure.css",
            "assets/css/theme.css"
        ],
        "js": [
            "assets/js/domready/ready.js",
            "assets/lib/leaflet/leaflet.js",
            "assets/lib/leaflet.fullscreen/Leaflet.fullscreen.js",
            "assets/lib/leaflet.awesome-markers/leaflet.awesome-markers.js",
            "assets/js/layers.js",
            "assets/js/photos.js",
            "assets/js/global-map.js",
            "assets/js/track-map.js",
            "assets/js/tag-map.js",
            "assets/js/photo-map.js",
            "assets/js/fitgallery.js"
        ]
    },
    "ignore": [
        "**/*.json",
        "include/**"
    ],
    "metadata": {
        "config": "config.json"
    },
    "forecast": {
        "lat": 46.3953,
        "lon": 5.4539,
        "units": "ca",
        "lang": "fr",
        "title": "Météo dans le Revermont",
        "url": "meteo.html",
        "fixture": "forecast.json"
    },
    "pooleApp": {
        "forms": {
            "comments": {
                "identifier": "path",
                "secret": "dev"
            }
        }
    },
    "gpxcleaner": {
        "limit": 1000
    },
    "profile": {
        "width": 500,
        "height": 200,
        "offsetMin": 20,
        "offsetMax": 50,
        "interpolation": "basis",
        "stroke": true,
        "strokeColor": "#5284E5",
        "color": "lightblue",
        "renderer": "area"
    },
    "date": ["created", "updated"],
    "collections": {
        "treks": {
            "pattern": "randonnees/**/index.html",
            "sortBy": "created",
            "reverse": true
        },
        "tracks": {
            "pattern": "single-tracks/**/index.html",
            "sortBy": "created",
            "reverse": true
        },
        "posts": {
            "pattern": "posts/*.html",
            "sortBy": "created",
            "reverse": true
        },
        "photos": {
            "pattern": "photos/**/index.html",
            "sortBy": "created",
            "reverse": true
        },
        "lastTreks": {
            "pattern": "randonnees/**/index.html",
            "limit": 5,
            "sortBy": "updated",
            "reverse": true
        },
        "lastTracks": {
            "pattern": "single-tracks/**/index.html",
            "limit": 5,
            "sortBy": "updated",
            "reverse": true
        },
        "lastPosts": {
            "pattern": "posts/*.html",
            "limit": 5,
            "sortBy": "created",
            "reverse": true
        },
        "feeds": {
            "pattern": "{posts,randonnees,single-tracks}.xml"
        },
        "menu": {
            "sortBy": "priority",
            "reverse": true
        }
    },
    "collectionsMaxDate": ["photos", "tracks", "treks"],
    "tags": {
        "handle": "tags",
        "path": "tags",
        "template": "tag.swig",
        "sortBy": "created",
        "reverse": true
    },
    "enrichTags": {
        "ext": "md",
        "basePath": "include/taginfo"
    },
    "paginate": {
        "perPage": 20,
        "pageSeparator": "/"
    },
    "paginateTag": {
        "perPage": 30
    },
    "templateEngine": "swig",
    "fileMetadata": [{
        "metadata": {
            "section": "treks",
            "template": "treks.swig",
            "icon": "treks"
        },
        "pattern": "randonnees.md"
    }, {
        "metadata": {
            "section": "tracks",
            "template": "tracks.swig",
            "icon": "tracks"
        },
        "pattern": "single-tracks.md"
    }, {
        "metadata": {
            "section": "home",
            "template": "home.swig"
        },
        "pattern": "index.md"
    }, {
        "metadata": {
            "section": "treks",
            "template": "trek.swig",
            "autoinclude": ["video", "direction"]
        },
        "pattern": "randonnees/**/index.md"
    }, {
        "metadata": {
            "section": "treks",
            "template": "trek.swig",
            "autoinclude": ["video", "direction"]
        },
        "pattern": "sandbox/**/index.md"
    }, {
        "metadata": {
            "section": "tracks",
            "template": "track.swig",
            "autoinclude": ["video", "direction"]
        },
        "pattern": "single-tracks/**/index.md"
    }, {
        "metadata": {
            "limit": "150"
        },
        "pattern": "single-tracks/**/*.gpx"
    }, {
        "metadata": {
            "section": "blog",
            "icon": "blog",
            "template": "blog.swig"
        },
        "pattern": "posts.md"
    }, {
        "metadata": {
            "section": "photos",
            "icon": "photo",
            "template": "photos.swig"
        },
        "pattern": "photos.md"
    }, {
        "metadata": {
            "section": "photos",
            "template": "photo.swig"
        },
        "pattern": "photos/**/index.md"
    }, {
        "metadata": {
            "section": "blog",
            "template": "post.swig"
        },
        "pattern": "posts/*.md"
    }, {
        "metadata": {
            "section": "a-propos",
            "icon": "info"
        },
        "pattern": "a-propos.md"
    }, {
        "metadata": {
            "template": "page.swig"
        },
        "pattern": "{thanks,mentions-legales,a-propos,send,glossaire,liens}.md"
    }, {
        "metadata": {
            "template": "contact.swig"
        },
        "pattern": "contact.md"
    }, {
        "metadata": {
            "template": "forecast.swig"
        },
        "pattern": "meteo.html"
    }, {
        "metadata": {
            "include": {
                "copyright": "include/copyright.html",
                "links": "include/links.html",
                "guidelines": "include/comment-guidelines.html",
                "social": "include/social.html",
                "blogsidebar": "include/blogsidebar.html"
            }
        },
        "pattern": "**"
    }],
    "screenshot": {
        "viewport": {
            "width": 400,
            "height": 445
        },
        "host": "127.0.0.1",
        "base": "/",
        "port": 10001,
        "selector": ".track-map,.map-tag",
        "format": "jpg",
        "filename": "map.jpg",
        "concurrency": 2,
        "urlHash": "simplified-map",
        "layerReadyClass": "default-layer-loaded",
        "transitionWaitTime": 500
    },
    "photoVariation": {
        "variations": {
            "nav": {
                "width": 100,
                "height": 100
            },
            "full": {
                "width": 760
            },
            "map": {
                "width": 180
            },
            "list": {
                "height": 160
            }
        }
    }
}
