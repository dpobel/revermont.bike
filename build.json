{
    "destination": "web",
    "source": "src",
    "ignore": "**/*.json",
    "metadata": {
        "config": "config.json"
    },
    "collections": {
        "tracks": {
            "pattern": "tracks/*/index.html"
        },
        "posts": {
            "pattern": "posts/*/index.html"
        }
    },
    "templateEngine": "swig",
    "fileMetadata": {
        "default": {
            "section": "standard"
        },
        "rules": [{
            "metadata": {
                "section": "tracks"
            },
            "pattern": "tracks/**"
        }, {
            "metadata": {
                "section": "blog"
            },
            "pattern": "posts/**"
        }, {
            "metadata": {
                "section": "a-propos"
            },
            "pattern": "pages/a-propos/*"
        }]
    }
}
