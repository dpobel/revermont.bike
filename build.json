{
    "lang": "fr",
    "destination": "web",
    "assets": "assets",
    "source": "src",
    "ignore": [
        "**/*.json"
    ],
    "metadata": {
        "config": "config.json"
    },
    "date": ["created", "updated"],
    "collections": {
        "tracks": {
            "pattern": "traces/**/index.html"
        },
        "posts": {
            "pattern": "posts/*.html"
        },
        "lastTracks": {
            "pattern": "traces/**/index.html",
            "limit": 5
        },
        "lastPosts": {
            "pattern": "posts/*.html",
            "limit": 5,
            "sortBy": "created",
            "reverse": true
        },
        "menu": {
            "sortBy": "priority",
            "reverse": true
        }
    },
    "tags": {
        "handle": "tags",
        "path": "tags",
        "template": "tag.swig",
        "sortBy": "date",
        "reverse": true
    },
    "paginate": {
        "perPage": 10,
        "pageSeparator": "/"
    },
    "paginateTag": {
        "perPage": 10
    },
    "templateEngine": "swig",
    "fileMetadata": [{
        "metadata": {
            "section": "tracks",
            "template": "tracks.swig",
            "icon": "tracks"
        },
        "pattern": "traces.md"
    }, {
        "metadata": {
            "section": "home",
            "template": "home.swig"
        },
        "pattern": "index.md"
    }, {
        "metadata": {
            "section": "tracks",
            "template": "track.swig"
        },
        "pattern": "traces/**/index.md"
    }, {
        "metadata": {
            "section": "blog",
            "icon": "blog",
            "template": "blog.swig"
        },
        "pattern": "posts.md"
    }, {
        "metadata": {
            "section": "blog",
            "template": "post.swig"
        },
        "pattern": "posts/*.md"
    }, {
        "metadata": {
            "section": "a-propos",
            "template": "page.swig",
            "icon": "info"
        },
        "pattern": "a-propos.md"
    }, {
        "metadata": {
            "include": {
                "copyright": "include/copyright.html",
                "links": "include/links.html"
            }
        },
        "pattern": "**"
    }]
}
