{
    "lang": "fr",
    "destination": "web",
    "source": "src",
    "ignore": [
        "**/*.json"
    ],
    "metadata": {
        "config": "config.json"
    },
    "date": ["created", "updated"],
    "collections": {
        "tracks": {
            "pattern": "tracks/*.html"
        },
        "posts": {
            "pattern": "posts/*.html"
        },
        "menu": {
            "sortBy": "priority",
            "reverse": true
        }
    },
    "paginate": {
        "perPage": 10,
        "pageSeparator": "/"
    },
    "templateEngine": "swig",
    "fileMetadata": [{
        "metadata": {
            "section": "tracks"
        },
        "pattern": "tracks/**"
    }, {
        "metadata": {
            "section": "blog",
            "include": {
                "sidebar": "include/postsidebar.html"
            }
        },
        "pattern": "posts/**"
    }, {
        "metadata": {
            "section": "a-propos"
        },
        "pattern": "pages/a-propos/*"
    }]
}
