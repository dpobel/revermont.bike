{
    "lang": "fr",
    "destination": "web",
    "assets": "assets",
    "source": "src",
    "ignore": [
        "**/*.json"
    ],
    "metadata": {
        "config": "config.json"
    },
    "date": ["created", "updated"],
    "collections": {
        "tracks": {
            "pattern": "tracks/*.html"
        },
        "posts": {
            "pattern": "posts/*.html"
        },
        "lastTracks": {
            "pattern": "tracks/*.html",
            "limit": 10
        },
        "lastPosts": {
            "pattern": "posts/*.html",
            "limit": 10
        },
        "menu": {
            "sortBy": "priority",
            "reverse": true
        }
    },
    "paginate": {
        "perPage": 10,
        "pageSeparator": "/"
    },
    "templateEngine": "swig",
    "fileMetadata": [{
        "metadata": {
            "section": "tracks",
            "template": "tracks.swig"
        },
        "pattern": "tracks.md"
    }, {
        "metadata": {
            "template": "home.swig"
        },
        "pattern": "index.md"
    }, {
        "metadata": {
            "section": "tracks",
            "template": "track.swig"
        },
        "pattern": "tracks/*.md"
    }, {
        "metadata": {
            "section": "blog",
            "include": {
                "sidebar": "include/postsidebar.html"
            },
            "template": "blog.swig"
        },
        "pattern": "posts.md"
    }, {
        "metadata": {
            "section": "blog",
            "include": {
                "sidebar": "include/postsidebar.html"
            },
            "template": "post.swig"
        },
        "pattern": "posts/*.md"
    }, {
        "metadata": {
            "section": "a-propos",
            "template": "page.swig"
        },
        "pattern": "a-propos.md"
    }]
}
